version: '3.2'

##############################
#                            #
# Ansible / Tower managed on #
#                            #
##############################

services:
  agent:
    image: portainer/agent:latest
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/lib/docker/volumes:/var/lib/docker/volumes
    networks:
      - agent_network
    deploy:
      mode: global

  portainer:
    image: portainer/portainer-ce:latest
    command: -H tcp://tasks.agent:9001 --tlsskipverify
    ports:
      - "{{ add_docker_swarm_portainer_https_port }}:9443"
      - "{{ add_docker_swarm_portainer_http_port }}:9000"
      - "8000:8000"
    volumes:
      - "{{ add_docker_swarm_portainer_volume_name }}:/data"
{% if add_docker_swarm_ssl | default(false)}
      - "{{ add_docker_swarm_ssl_path }}:/certs"
    env:
      sslcert: "{{ add_docker_swarm_cert }}"
      sslkey: "{{ add_docker_swarm_key }}"
{% endif %}
    networks:
      - agent_network
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints: [node.role == manager]

networks:
  agent_network:
    driver: overlay
    attachable: true

volumes:
  {{ add_docker_swarm_portainer_volume_name }}:
